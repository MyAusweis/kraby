{% macro endcap(name, x, y, z, r, p, ya) %}
  <link name="{{ name }}">
    <collision>
      <origin xyz="{{ x }} {{ y }} {{ z }}" rpy="{{ r }} {{ p }} {{ ya }}" />
      <geometry>
        <mesh filename="meshes/endcap.dae" />
      </geometry>
    </collision>
    <visual>
      <origin xyz="{{ x }} {{ y }} {{ z }}" rpy="{{ r }} {{ p }} {{ ya }}" />
      <geometry>
        <mesh filename="meshes/endcap.dae" />
      </geometry>
      <material name="BlackRubber">
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <inertial>
      <origin xyz="{{ x }} {{ y }} {{ z }}" rpy="{{ r }} {{ p }} {{ ya }}" />
      <mass value="0.0005" /> <!-- TODO -->
      <!-- endcap has a negligeable inertia -->
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" />
    </inertial>
  </link>
{%- endmacro %}
